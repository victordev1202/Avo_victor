{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["error", "never"],
        "camelcase": ["error", {"ignoreDestructuring": true}]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [
                    ["@", "./app/frontend"]
                ]
            }
        }
    }
}